FROM debian:11-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

RUN apt-get update 

RUN apt-get install -y wget git
RUN apt-get install -y zip tar
RUN apt-get install -y curl
RUN apt-get install -y python3.10
RUN apt-get install -y python3-pip
RUN apt-get clean && apt-get autoclean

RUN echo update-alternatives --install /usr/bin/python python /usr/bin/python3.10 1

RUN wget --no-check-certificate --no-cache --no-cookies https://raw.githubusercontent.com/lunamidori5/Midori-AI/master/other_files/model_installer/requirements.txt

RUN pip install -r requirements.txt
RUN pip cache purge

CMD echo hello!